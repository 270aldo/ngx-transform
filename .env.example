# Optional: Upstash Redis (rate limiting)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Optional: Tuning
MAX_IMAGE_DIMENSION_PX=1600
MAX_UPLOAD_BYTES=10485760

# Optional: Booking CTA
NEXT_PUBLIC_BOOKING_URL=

# Optional: Contact email (legal/privacy)
NEXT_PUBLIC_SUPPORT_EMAIL=

# ============================================================================
# PR-0: Hardening & Instrumentation
# ============================================================================

# Feature Flags (all default to true unless specified)
FF_TELEMETRY_ENABLED=true
FF_DELETE_TOKEN_REQUIRED=true

# Retry Configuration
MAX_ANALYSIS_RETRIES=3
MAX_IMAGE_GENERATION_RETRIES=2

# ============================================================================
# PR-1: Nano Banana Pro (Identity Chain)
# ============================================================================

# Enable Nano Banana Pro (Gemini 3 Pro Image)
FF_NB_PRO=false
FF_IDENTITY_CHAIN=true
FF_QUALITY_GATES=true

# ============================================================================
# PR-2: Results 2.0
# ============================================================================

# Main flag to enable Results 2.0 experience (cinematic + chapters)
NEXT_PUBLIC_FF_RESULTS_2=false

FF_CINEMATIC_AUTOPLAY=true
FF_COMPARE_SLIDER=true
FF_LETTER_FROM_FUTURE=true
FF_DRAMATIC_REVEAL=true

# ============================================================================
# PR-3: Viral Mechanics
# ============================================================================

FF_OG_SPLIT_SCREEN=true
FF_SHARE_TO_UNLOCK=true
FF_REFERRAL_TRACKING=true
SHARE_UNLOCK_DELAY_SECONDS=5
FF_EXPOSE_ORIGINAL=true
FF_SOCIAL_COUNTER=true
FF_AGENT_BRIDGE_CTA=true

# ============================================================================
# PR-4: Conversion
# ============================================================================

FF_PLAN_7_DIAS=true
FF_EMAIL_SEQUENCE=true
PLAN_GENERATION_MODEL=gemini-2.5-flash

