rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Only allow uploads from authenticated users or specific paths
      allow read, write: if request.auth != null;
    }
    
    match /sessions/{sessionId}/{fileName} {
      // Allow upload if user is authenticated (simplified)
      allow write: if request.auth != null;
      // Allow read if it's a generated image or the user's upload
      allow read: if true; 
    }
  }
}
